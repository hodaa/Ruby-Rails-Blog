<div class="container">
<ul class="nav">
  <li class="nav-item">
    <%= link_to 'New article', new_article_path %>
  </li>

</ul>



<h1>Listing articles</h1>

<table class="table table-border">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Actions</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %>| <%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>
</div>